---
import ContenidoCurso from "./ContenidoCurso.astro";
import DarkButtons from "./DarkButtons.astro";
---
<div class="w-3/5 h-1/2 flex flex-col p-10 gap-5 bg-[#00324d] rounded-3xl">

    <div>
        <h2 class="tex-[25px] text-white">Nombre del modulo:</h2>
    </div>

    <div>
        <input type="text" class="w-full bg-[#fff] p-2 rounded-lg">
    </div>

    <div>
        <h2 class="tex-[25px] text-white">Clases:</h2>
    </div>

    <div class="w-full px-8">
        <ContenidoCurso contenido="Hola!!" duracion="Video"/>
    </div>

    <div class="w-[650px] ml-9 h-[200px] bg-[#fff] px-10 rounded-3xl">
        <h2 class="text-center text-[18px] font-bold mt-3">Nueva clase</h2>
        <div class="w-full flex items-center justify-center">
            <div class="w-1/2 flex flex-col items-start justify-center p-2">
                <h2 class="text-[13px] font-bold">Nombre:</h2>
                <input type="text" class="w-full bg-[#bbb] p-2 rounded-xl">
            </div>
            <div class="w-1/2 flex flex-col items-start justify-center p-2">
                <h2 class="text-[13px] font-bold">Tipo:</h2>
                <input type="text" class="w-full bg-[#bbb] p-2 rounded-xl">
            </div>
        </div>
        <div class="w-full flex items-center justify-center">
            <div class="w-1/2 flex flex-col items-start justify-center p-2">
                <h2 class="text-[13px] font-bold">Descripcion:</h2>
                <input type="text" class="w-full bg-[#bbb] p-2 rounded-xl">
            </div>
            <div class="w-1/2 flex flex-col items-start justify-center p-3">
                <DarkButtons>Subir archivo</DarkButtons>
            </div>
        </div>
    </div>
    <div class="flex justify-end w-full">
        <button class="bg-[#000] text-white p-2 rounded-[15px]">Agregar nueva clase</button>
    </div>
</div>